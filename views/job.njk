{% extends "layout.njk" %}

{% block head %}

<title>{{item.title}}</title>
{% endblock %}

{% block content %}

    <div id="wrapper" class="jobs">
        <h1>{{item.title}}</h1>        
    </div>

    <section class="job"> 

        <div class="card" id="{{item.id}}">
                <a class="card__image-container" href="https://github.com/pomendonca/{{item.id}}"><img  src="https://i.imgur.com/{{item.img}}" alt="{{item.title}}"></a>            
            <div class="card__content">
                <p>{{item.description}}</p>
            </div>
            <div class="card__info">
                <p>Linguagem: {{item.p_language}}</p>
                <p class="card__price">{{item.price}}</p>
            </div>
        </div>
    </section>

{% endblock %}