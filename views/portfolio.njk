{% extends "layout.njk" %}

{% block head %}

<title>Portfolio - Pedro Mendonça</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
rel="stylesheet">

{% endblock %}

{% block content %}

    <div id="wrapper">
        <h1>Portfolio</h1>        
    </div>

    <section class="cards"> 

        {% for item in items %}
        <div class="card" id="{{item.id}}">
            <div class="card__image-container {{'concluded-wrapper' if item.concluded}}">
                <img src="https://i.imgur.com/{{item.img}}" alt="Imagem de {{item.title}}">
                {% if item.concluded %}
                    <div class="concluded">Concluído</div>
                {% endif %}
            </div>
            <div class="card__content">
                <p><strong>{{item.title}}</strong></p><br/>
                <p>{{item.description}}</p>
            </div>
            <div class="card__info">
                <p>Linguagem: {{item.p_language}}</p>
                <p class="card__price">{{item.price}}</p>
            </div>
        </div>
        
        {% endfor %}

    </section>

    <script src="/scripts.js"></script>

{% endblock %}